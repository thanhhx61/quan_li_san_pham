@model CreateProduct
@{
    ViewBag.Title = $"{ViewBag.CategoryName} | Create";
}

<form asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <img class="img-thumbnail no-photo" src="~/images/no-photo.jpg" alt="no photo" />
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" accept="image/*" id="exampleInputFile" name="Photo">
                        <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-secondary" asp-controller="Product" asp-action="Create" asp-route-catId="@ViewBag.CategoryId">
                    <i class="fas fa-backward">
                    </i>
                    Back
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Phân loại</label>
                <select>
                    <option value="1">Áo</option>
                    <option value="2">Quần</option>
                    <option value="3">Giày</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ProductName"></label>
                <input class="form-control" asp-for="ProductName" placeholder="Book name">
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producer"></label>
                <input class="form-control" asp-for="Producer" placeholder="Authors">
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input class="form-control" asp-for="Year" placeholder="Publish year">
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Price"></label>
                    <input class="form-control" asp-for="Price" placeholder="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Amout"></label>
                    <input class="form-control" asp-for="Amout" placeholder="Quantity">
                    <span asp-validation-for="Amout" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" rows="12" asp-for="Description" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
@section scripts{ 
    <script>
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $('.no-photo').attr('src', window.URL.createObjectURL($(this)[0].files[0]));
            $(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}